{% extends 'base.html.twig' %}

{% block title %}Les familles!{% endblock %}
{% block PageTitle %} Nos Familles {% endblock %}
{% block PageArbo %} {{ parent() }} / Familles {% endblock %}

{% block body %}
    <div class="flex flex-row w-full">
        <!-- Main Content -->
        <div class="flex-1 p-4">
            <div id="gridContent" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
                {% for item in items %}
                    {% include "Public/asset_browser/partial/cards.html.twig" with {'item': item} %}
                {% endfor %}
            {{ knp_pagination_render(items) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block Navigation %}
     {% include "Public/asset_browser/partial/sideNavigation.html.twig"
        with {
            'familyCategory' : familyCategory
            } 
        %}
{% endblock %}