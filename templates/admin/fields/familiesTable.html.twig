{# filepath: templates/admin/fields/familiesTable.html.twig #}
{% if field.value | length != 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Date de modification</th>

            </tr>
        </thead>
        <tbody>
            {% for item in field.value %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>
                        <a href="{{ ea_url()
                            .setController('App\\Controller\\Admin\\FamilyCategoryCrudController')
                            .setAction('detail')
                            .setEntityId(item.id)
                            .generateUrl() }}">
                        {{ item.name }}
                        </a>
                    </td>
                    <td>{{ item.updatedAt | date('d/m/Y H:i') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>Aucune famille</p>
{% endif %}