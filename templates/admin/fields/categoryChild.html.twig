{% if field.value | length != 0 %}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Nombre d'enfant</th>
            <th>Nombre de familles</th>
        </tr>
    </thead>
    <tbody>
        {% for item in field.value %}
            <tr>
                <td>{{ item.id }}</td>
                <td>
                    <a href="{{ ea_url()
                            .setController('App\\Controller\\Admin\\FamilyCategoryCrudController')
                            .setAction('detail')
                            .setEntityId(item.id)
                            .generateUrl() }}">
                        {{ item.name }}
                    </a>
                </td>
                <td>{{ item.childCount }}</td>
                <td>{{ item.familyCount }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% else %}

    <p>Aucune cat√©gorie enfant</p>

{% endif %}