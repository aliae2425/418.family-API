{% extends 'admin/base.html.twig' %}


{% block title %}{{brand.name}}{% endblock %}

{% block body %}

<section class="text-black py-20 px-4">
    <div class="container mx-auto flex flex-col md:flex-row justify-between items-center">
        <div class="md:w-1/2 mb-10 md:mb-0">
            <h2 class="text-4xl font-bold leading-tight mb-4">{{brand.name}}</h2>
            <p class="text-xl mb-4">We offer a range of services to help you achieve your goals.</p>
        </div>
        <div class="md:w-1/2">
            <img src="{{vich_uploader_asset(brand, 'File')}}" alt="Hero Image" class="w-full rounded-xl">
        </div>
    </div>
</section>

{% endblock %}