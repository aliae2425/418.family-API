{% extends 'admin/base.html.twig' %}

{% block title %}marques{% endblock %}

{% block body %}

    {# Js controller test  #}
    {# <h1 data-controller="trash"></h1> #}


<turbo-frame id="CategoryFrom" class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 pr-10 lg:px-8">
    <div class="align-middle rounded-tl-lg rounded-tr-lg inline-block w-full py-4 overflow-hidden bg-neutral-800 shadow-lg px-12">
        <div class="flex justify-between">
            <h1 class="text-3xl text-neutral-100 font-bold">Liste des categories</h1>
            <a href="{{path('admin.brand.categories.add')}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Ajouter catégories</a>
        </div>
    </div>

    <div class="align-middle inline-block min-w-full shadow overflow-hidden bg-neutral-800 shadow-dashboard px-8 pt-3 rounded-bl-lg rounded-br-lg">
        <table class="min-w-full">
            <thead>
                <tr>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-neutral-100 tracking-wider">ID</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 text-neutral-100 tracking-wider">Icon</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 text-neutral-100 tracking-wider">Nom</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 text-neutral-100 tracking-wider">nombre de fabrican</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300"></th>
                </tr>
            </thead>
            <tbody class="bg-neutral-800">
                {% for category in categories %}
                    <tr>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                            <div class="flex items-center">
                                <div>
                                    <div class="text-sm leading-5 text-gray-600">#{{category.id}}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                            <div class="flex items-center">
                                <div>
                                    <div class="text-sm leading-5 text-gray-600">{{category.icon}}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                            <a class="text-sm leading-5 text-neutral-200" href="{{ path('admin.brand.categories.show', {"id" : category.id }) }}">{{category.name}}</a>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b text-neutral-200 border-gray-500 text-sm leading-5">{{category.brands | length}}</td>
                        <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                            <a href="{{ path('admin.brand.categories.edit', {"id" : category.id }) }}" 
                                class="px-5 py-2 border-blue-500 border text-neutral-100 rounded transition duration-300 hover:bg-blue-700 hover:text-white focus:outline-none">Modifier</a>
                            {% if category.brands | length == 0 %}
                                <a href="{{ path('admin.brand.categories.delete', {"id" : category.id }) }}" 
                                    class="px-5 py-2 border-red-500 border text-neutral-100 rounded transition duration-300 hover:bg-red-700 hover:text-white focus:outline-none">Supprimer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</turbo-frame>

<div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 pr-10 lg:px-8">
    <div class="align-middle rounded-tl-lg rounded-tr-lg inline-block w-full py-4 overflow-hidden bg-neutral-800 shadow-lg px-12">
        <div class="flex justify-between">
            <h1 class="text-3xl text-neutral-100 font-bold">Liste des marques</h1>
            <a href="{{path('admin.brands.add')}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Ajouter marques</a>
        </div>
    </div>

    <div class="align-middle inline-block min-w-full shadow overflow-hidden bg-neutral-800 shadow-dashboard px-8 pt-3 rounded-bl-lg rounded-br-lg">
        <table class="min-w-full">
            <thead>
                <tr>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left leading-4 text-neutral-100 tracking-wider">ID</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 text-neutral-100 tracking-wider">Nom</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 text-neutral-100 tracking-wider">Categories</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 text-neutral-100 tracking-wider">Date de création</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 text-neutral-100 tracking-wider">dernière mise à jour.</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 text-neutral-100 tracking-wider">nombre de lien</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300"></th>
                </tr>
            </thead>
            <tbody class="bg-neutral-800">
                {% for brand in brands %}
                    <tr>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                            <div class="flex items-center">
                                <div>
                                    <div class="text-sm leading-5 text-gray-600">#{{brand.id}}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                            <a class="text-sm leading-5 text-neutral-200" href="{{ path('admin.brands.show', {"id" : brand.id }) }}">{{brand.name}}</a> 
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b text-neutral-200 border-gray-500 text-sm leading-5"> 
                            {% for cat in brand.categories %}
                                <span class="text-sm leading-5 text-neutral-200">{{cat.name}}</span>
                            {% endfor %}
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b text-neutral-200 border-gray-500 text-sm leading-5">{{ brand.createAt|date('H:i d/m/Y', 'Europe/Paris') }}</td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b text-neutral-200 border-gray-500 text-sm leading-5">{{ brand.updateAt|date('H:i d/m/Y', 'Europe/Paris') }}</td>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500 text-neutral-200 text-sm leading-5 center">{{brand.links | length}}</td>
                        <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-500 text-sm leading-5">
                            <a href="{{ path('admin.brands.edit', {"id" : brand.id }) }}" class="px-5 py-2 border-blue-500 border text-neutral-100 rounded transition duration-300 hover:bg-blue-700 hover:text-white focus:outline-none">Modifier</a>
                            <a href="{{ path('admin.brands.delete', {"id" : brand.id }) }}" class="px-5 py-2 border-red-500 border text-neutral-100 rounded transition duration-300 hover:bg-red-700 hover:text-white focus:outline-none">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
