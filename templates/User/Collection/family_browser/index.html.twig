{% extends 'user/UserBase.html.twig' %}

{% block title %}Collection{% endblock %}


{% block content %}
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Collection de Familles</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for item in items %}
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-lg font-bold mb-2">{{ item.name }}</h3>
                {# <p class="text-gray-700 mb-4">{{ item.description }}</p> #}
                <p class="text-gray-500 text-sm">Créé le {{ item.createdAt|date('d/m/Y') }}</p>
                <a href="#" class="text-blue-500 hover:text-blue-700">Voir plus</a>
            </div>
        {% else %}
            <p class="text-center col-span-full">Aucun item trouvé.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
