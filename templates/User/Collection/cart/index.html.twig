{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
    <table >
        <thead>
            <tr>
                <th class="py-2 px-4 border-b ">Famille</th>
                <th class="py-2 px-4 border-b">Prix</th>
            </tr>
        </thead>
        <tbody>
            {% if cart %}
                {% for famille in cart.famillies %}
                    <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">{{ famille.name }}</td>
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700">{{ famille.price }} â‚¬</td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 text-center" colspan="2">Aucune famille dans le panier.</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td class="py-2 px-4 border-b border-gray-200 dark:border-gray-700 text-center" colspan="2">Aucune famille dans le panier.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <div class="mt-4">
        <a href="{{ path('user_cart_checkout') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Valider mon panier</a>
    </div>
{% endblock %}
