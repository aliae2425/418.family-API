{% extends 'User/UserBase.html.twig' %}

{% block content %}

<!-- Main Content -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">Informations Personnelles</h2>
        <p class="text-gray-700 dark:text-gray-300">Nom: {{ user.lastName }}</p>
        <p class="text-gray-700 dark:text-gray-300">Prénom: {{ user.firstName }}</p>
        <p class="text-gray-700 dark:text-gray-300">Email: {{ user.email }}</p>
    </div>

    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">Activité</h2>
        <p class="text-gray-700 dark:text-gray-300">Dernière connexion: {{ user.lastActivity|date('d/m/Y H:i') }}</p>
        <p class="text-gray-700 dark:text-gray-300">Membre depuis: {{ user.createdAt|date('d/m/Y') }}</p>
        <p class="text-gray-700 dark:text-gray-300">Nombre d'articles: {{ user.currentCartCount }}</p>
    </div>

    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">Statistiques</h2>
        <p class="text-gray-700 dark:text-gray-300">Familles collectées: {{ user.familyCount }}</p>
        <p class="text-gray-700 dark:text-gray-300">Familles créées: {{ user.createdFamilyCount }}</p>
        <p class="text-gray-700 dark:text-gray-300">Coins: {{ user.coins ?? 0 }}</p>
    </div>
</div>

{% endblock %}